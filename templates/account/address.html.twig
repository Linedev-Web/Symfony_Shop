{% extends 'base.html.twig' %}

{% block title %}Mes addresses{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Mes addresses</h1>
        <p>C'est dans cet espace que vous allez pouvoir gÃªrer tooutes vos adresses</p>
        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('account') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('account_address_add') }}" class="btn btn-primary">Ajouter une addresses</a>
        </div>
        <hr>
        {% if app.user.addresses | length > 0 %}
            <div class="row">
                {% for address in app.user.addresses %}
                    <div class="col-md-4">
                        <div class="card card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }} <br>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <div class="row justify-content-between">
                                <div class="col-5">
                                    <a href="{{ path('account_address_edit', {'id' : address.id}) }}"
                                       class="btn btn-primary w-100">Modifier</a>
                                </div>
                                <div class="col-5">
                                    <a href="{{ path('account_address_delete', {'id' : address.id}) }}"
                                       class="btn btn-danger w-100">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>Vous n'avez pas encore ajouter d'addresses dans votre compte client. Pourquoi en ajouter.</p>
        {% endif %}
    </div>
{% endblock %}
