{% extends 'base.html.twig' %}

{% block title %}Ajouter une addresse{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Ajouter une addresse</h1>
        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('app_account_address') }}" class="btn btn-secondary">Retour</a>
        </div>
        <hr>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="card card-body shadow-sm">
                    {{ form_row(form.name) }}
                    {{ form_row(form.firstname) }}
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.company) }}
                    {{ form_row(form.phone) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-body shadow-sm">
                    {{ form_row(form.address) }}
                    {{ form_row(form.postal) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.country) }}

                </div>
            </div>
        </div>
        <hr>
        <div class="my-3">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
